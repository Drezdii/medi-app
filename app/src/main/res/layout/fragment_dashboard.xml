<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/global_padding"
    tools:context=".dashboard.ui.DashboardFragment">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/gp_card"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/gp_card_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="@dimen/global_padding"
            android:paddingTop="@dimen/global_padding">

            <androidx.cardview.widget.CardView
                android:id="@+id/avatar_container"
                android:layout_width="53dp"
                android:layout_height="53dp"
                app:cardBackgroundColor="@color/purple_500"
                app:cardCornerRadius="25dp"
                app:layout_constraintEnd_toStartOf="@id/name_container"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    app:cardCornerRadius="25dp">

                    <ImageView
                        android:id="@+id/avatar_image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:contentDescription="@string/gp_avatar_desc"
                        android:scaleType="centerCrop"
                        android:src="@drawable/default_gp_photo" />

                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/name_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/global_padding"
                android:orientation="vertical"
                app:layout_constraintStart_toEndOf="@id/avatar_container"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    app:layout_constraintStart_toEndOf="@id/avatar_container"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Lewis Hamilton" />

                <TextView
                    android:id="@+id/medical_center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    app:layout_constraintStart_toEndOf="@id/avatar_container"
                    app:layout_constraintTop_toBottomOf="@id/name"
                    tools:text="Test medical center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/name_container">

                <Button
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/call" />

                <Button
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/message" />
            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/medical_history_card"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:layout_marginVertical="@dimen/global_padding"
        android:layout_marginEnd="@dimen/global_padding"
        app:layout_constraintBottom_toTopOf="@id/insurance_company_card"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/predictions_history_card"
        app:layout_constraintTop_toBottomOf="@id/gp_card">

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/predictions_history_card"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:layout_marginVertical="@dimen/global_padding"
        app:layout_constraintLeft_toRightOf="@id/medical_history_card"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gp_card">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/prediction_icon"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:contentDescription="@string/prediction_history"
                android:padding="@dimen/global_padding"
                app:layout_constraintBottom_toTopOf="@id/prediction_text"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/prediction_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/latest_prediction"
                android:textAlignment="center"
                app:layout_constraintBottom_toTopOf="@id/prediction_date"
                app:layout_constraintTop_toBottomOf="@id/prediction_icon" />

            <TextView
                android:id="@+id/prediction_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/prediction_text"
                tools:text="17/12/2021" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/insurance_company_card"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginVertical="@dimen/global_padding"
        app:layout_constraintTop_toBottomOf="@id/medical_history_card">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/insurance_company_card_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="@dimen/global_padding"
            android:paddingVertical="@dimen/global_padding">

            <androidx.cardview.widget.CardView
                android:id="@+id/logo_container"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:cardCornerRadius="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toStartOf="@id/company_name_container"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/logo_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/insurance_company_desc"
                    android:scaleType="centerCrop"
                    android:src="@drawable/default_gp_photo" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/company_name_container"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/global_padding"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/logo_container"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/company_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    app:layout_constraintStart_toEndOf="@id/logo_container"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Lewis Hamilton" />

                <TextView
                    android:id="@+id/test123"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    app:layout_constraintStart_toEndOf="@id/logo_container"
                    app:layout_constraintTop_toBottomOf="@id/company_name"
                    tools:text="Test medical center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/company_name_container">

                <Button
                    android:id="@+id/call_insurance_button"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/call" />

                <Button
                    android:id="@+id/message_insurance_button"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/message" />
            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
